{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["prettier"],
  "rules": {
    "import/prefer-default-export": 0,
    "prettier/prettier": "error",
    "arrow-parens": [1, "as-needed"],
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      },
      {
        "enforceForRenamedProperties": false
      }
    ],
    "no-underscore-dangle": ["error", { "allow": ["_json", "__FILENAME__"] }]
  }
}
